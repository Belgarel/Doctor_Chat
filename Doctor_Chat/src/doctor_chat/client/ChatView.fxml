<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.181" xmlns:fx="http://javafx.com/fxml/1" fx:controller="doctor_chat.client.ChatViewController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <Button fx:id="btnSendMsg" layoutX="355.0" layoutY="319.0" mnemonicParsing="false" onAction="#sendMessage" text="Envoyer" />
            <Accordion layoutX="261.0" layoutY="129.0" />
            <TextArea fx:id="areaConv" editable="false" layoutX="14.0" layoutY="48.0" prefHeight="265.0" prefWidth="380.0" promptText="Conversations..." />
            <Button fx:id="btnClearMsg" layoutX="355.0" layoutY="358.0" mnemonicParsing="false" onAction="#clearMessage" prefHeight="32.0" prefWidth="63.0" text="Effacer" />
            <Label layoutX="14.0" layoutY="10.0" text="Doctor Chat">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextArea fx:id="fieldMsg" layoutX="14.0" layoutY="313.0" prefHeight="75.0" prefWidth="336.0" promptText="Tapez votre Message.." />
            <ListView fx:id="contactList" layoutX="442.0" layoutY="48.0" prefHeight="265.0" prefWidth="133.0" />
      </children>
    </AnchorPane>
  </children>
</VBox>
